<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Action Car -->
     <record id="car_action_view_form" model="ir.ui.view">
        <field name="name">Car Tree</field>
        <field name="model">car_management.car</field>
        <field name="arch" type="xml">
            <form string="Test Form Car">
                <header>
                   <button name="driver_details"
                           type="object"
                           string="Détail chauffeur"
                           icon="fa-id-card"
                   />
                   <button string="Changer chauffeur" type="action"
                           name="%(franck)d"
                           context="{'employee_id':active_id}"
                           icon="fa-pencil-square"
                   />
                </header>
                <sheet>
                    <group>
                        <field name="manufacturer" placeholder="e.g. Toyota" style="hein"/>
                    </group>
                    <group>
                        <group>
                            <field name="car_model" placeholder="e.g. Corolla"/>
                            <field name="numbers_of_places" placeholder="e.g. 2"/>
                        </group>
                        <group>
                            <field name="fuel_type" placeholder="e.g. Essence"/>
                            <field name="employe_id" placeholder="e.g. Kreto Ariel"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="travel_action_view_form" model="ir.ui.view">
        <field name="name">Travel Form</field>
        <field name="model">car_management.travel</field>
        <field name="arch" type="xml">
            <form string="Test Form Car">
                <sheet>
                    <group>
                        <group>
                            <field name="departure_location" placeholder="e.g. Abidjan"/>
                            <field name="destination" placeholder="e.g. Paris"/>
                            <field name="car_id"/>
                        </group>
                        <group>
                            <field name="date_departure"/>
                            <field name="date_arrival"/>
                            <field name="numbers_of_places"/>
                        </group>
                        <group>
                            <field name="travel_time"
                                   help="Le Nombre saisi sera multiplié par. Le temps d'arrivée s'exprime en jour"
                                    placeholder="e.g. 2"/>
                        </group>
                    </group>

                </sheet>

            </form>
        </field>
    </record>

    <record id="ticket_action_view_form" model="ir.ui.view">
        <field name="name">Travel Form</field>
        <field name="model">car_management.ticket</field>
        <field name="arch" type="xml">
            <form string="Test Form Car">
                <sheet>
                    <group>
                        <group>
                            <field name="contact_id" placeholder="e.g. Afri Kreto"/>
                            <field name="destionation" placeholder="Abidjan"/>
                            <field name="amount" placeholder="e.g. 15500.00 FCFA"/>
                        </group>
                        <group>
                            <field name="car_id" placeholder="Mercedes-Benz GLE"/>
                            <field name="date"/>
                            <field name="date_departure"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>


