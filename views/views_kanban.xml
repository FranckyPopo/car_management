<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="car_action_view_kanban" model="ir.ui.view">
        <field name="name">Car Kanban</field>
        <field name="model">car_management.car</field>
        <field name="arch" type="xml">
            <kanban default_group_by="manufacturer" quick_create="True" quick_create_view="car_model">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click mb-2" >
                            <h3>
                                <span>Modèle : </span>
                                <field name="car_model"/>
                            </h3>
                            <div>
                                <span>Fabriquant: </span>
                                <field name="manufacturer"/>
                            </div>
                            <div style="">
                                <span>Conducteur: </span>
                                <field name="employe_id"/>
                            </div>
                            <div style="">
                                <span>Type de carburant: </span>
                                <field name="fuel_type"/>
                            </div>


                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <record id="travel_action_view_kanban" model="ir.ui.view">
        <field name="name">Travel Kanban</field>
        <field name="model">car_management.travel</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click mb-2" >
                            <h3>
                                <span>Destination : </span>
                                <field name="destination"/>
                            </h3>
                            <div>
                                <span>Lieux de départ: </span>
                                <field name="departure_location"/>
                            </div>
                            <div style="">
                                <span>Date de dèpart: </span>
                                <field name="date_departure"/>
                            </div>
                            <div style="">
                                <span>Date de arrivée: </span>
                                <field name="date_arrival"/>
                            </div>


                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <record id="ticket_action_view_kanban" model="ir.ui.view">
        <field name="name">Ticket Kanban</field>
        <field name="model">car_management.ticket</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click mb-2" >
                            <h3>
                                <span>Nom du client : </span>
                                <field name="contact_id"/>
                            </h3>
                            <div>
                                <span>Voiture: </span>
                                <field name="car_id"/>
                            </div>
                            <div style="">
                                <span>Destination: </span>
                                <field name="destionation"/>
                            </div>
                            <div style="">
                                <span>Date de départ: </span>
                                <field name="date_departure"/>
                            </div>
                            <div style="">
                                <span>Prix du ticket: </span>
                                <field name="amount"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>